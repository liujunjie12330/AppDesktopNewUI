<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="life_spinner_style" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#aaa</item>
    </style>

    <style name="process_bar_loading_style" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/process_bar_loading_rotate</item>
    </style>

    <style name="template_check_box" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/template_content_color</item>
        <item name="android:colorControlNormal">@color/template_content_color</item>
    </style>

    <style name="EditTextStyle">
        <!--表示控件默认的颜色-->
        <item name="android:colorControlNormal">@color/underline_color</item>
        <!--表示控件被激活时的颜色-->
        <item name="android:colorControlActivated">@color/underline_color</item>
    </style>

    <style name="live_setting_material_selected">
        <item name="android:layout_width">70dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">7</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowDx">10</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="live_setting_material_normal">
        <item name="android:layout_width">68dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/live_setting_main_color</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="live_setting_material_normal2">
        <item name="android:layout_width">90dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/live_setting_main_color</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/whiteboard_config_radio_style</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/grey600</item>
        <item name="android:textSize">@dimen/whiteboard_config_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="radio_style_large">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/whiteboard_config_radio_style</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/grey800</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="tab_text_style">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="tab_text_style_3">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tab_text_style_2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="fade_scale_anima_style">
        <item name="android:windowEnterAnimation">@anim/fade_scale_in_200</item>
        <item name="android:windowExitAnimation">@anim/fade_scale_out_200</item>
    </style>

</resources>