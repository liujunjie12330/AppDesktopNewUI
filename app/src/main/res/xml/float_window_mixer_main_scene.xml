<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/landscape"
        motion:constraintSetStart="@id/portrait"
        motion:duration="10" />

    <ConstraintSet android:id="@+id/portrait">

        <Constraint
            android:id="@+id/layoutTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/layoutBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

        <Constraint
            android:id="@+id/layoutCustom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutBar" />

        <Constraint
            android:id="@+id/layoutEqu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCustom" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/landscape">

        <Constraint
            android:id="@+id/layoutTitle"
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/layoutCustom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle" />

        <Constraint
            android:id="@+id/layoutBar"
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/layoutCustom"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle" />


        <Constraint
            android:id="@+id/layoutEqu"
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/layoutBar"
            app:layout_constraintTop_toBottomOf="@id/layoutBar" />

    </ConstraintSet>
</MotionScene>