<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_default_background"
    android:padding="15dp">

    <include
        android:id="@+id/mirror_portrait"
        layout="@layout/output_mirror_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <include
        android:id="@+id/mirror_landscape"
        layout="@layout/output_mirror_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/mirror_portrait"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/mirror_portrait"
        app:layout_constraintTop_toBottomOf="@id/mirror_portrait" />

    <include
        android:id="@+id/camara_portrait_force"
        layout="@layout/output_mirror_item_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/mirror_portrait"
        app:layout_constraintEnd_toEndOf="@id/mirror_portrait"
        app:layout_constraintTop_toBottomOf="@id/mirror_landscape"
        />

</androidx.constraintlayout.widget.ConstraintLayout>