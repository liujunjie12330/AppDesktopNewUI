        android:background="@drawable/circle_view_background"/>

    <cn.synway.module_sdirector_ui.whiteboard.ui.custom.CircleView
        android:id="@+id/sv_3"
        android:layout_width="@dimen/color_size"
        android:layout_height="@dimen/color_size"
        android:layout_margin="@dimen/view_span"
        android:background="@drawable/circle_view_background"/>

    <cn.synway.module_sdirector_ui.whiteboard.ui.custom.CircleView
        android:id="@+id/sv_4"
        android:layout_width="@dimen/color_size"
        android:layout_height="@dimen/color_size"
        android:layout_margin="@dimen/view_span"
        android:background="@drawable/circle_view_background"/>
</LinearLayout>
