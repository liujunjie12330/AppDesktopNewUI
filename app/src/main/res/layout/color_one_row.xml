<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <cn.synway.module_sdirector_ui.whiteboard.ui.custom.CircleView
        android:id="@+id/sv_1"
        android:layout_width="@dimen/color_size"
        android:layout_height="@dimen/color_size"
        android:layout_margin="@dimen/view_span"
        android:background="@drawable/circle_view_background"
        />

    <cn.synway.module_sdirector_ui.whiteboard.ui.custom.CircleView
        android:id="@+id/sv_2"
        android:layout_width="@dimen/color_size"
