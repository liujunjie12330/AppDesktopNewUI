<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_white_drawable"
    android:elevation="@dimen/whiteboard_pop_elevation"
    android:orientation="vertical"
    android:paddingVertical="5dp"
    android:paddingStart="15dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hdmi1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/hdmi1"
            android:textColor="@color/color_enable_38_a6"
            android:textSize="@dimen/wb_hdmi_text_size" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/hdmi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.55"
            android:scaleY="0.55"
            android:thumb="@drawable/switch_thumb_normal"
            app:track="@drawable/switch_track_normal" />

        <TextView
            android:id="@+id/tv_hdmi1_lost"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未插入"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/wb_hdmi_text_size"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hdmi2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/hdmi2"
            android:textColor="@color/color_enable_38_a6"
            android:textSize="@dimen/wb_hdmi_text_size" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/hdmi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.55"
            android:scaleY="0.55"
            android:thumb="@drawable/switch_thumb_normal"
            app:track="@drawable/switch_track_normal" />

        <TextView
            android:id="@+id/tv_hdmi2_lost"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未插入"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/wb_hdmi_text_size"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/miracast_feature"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_miracast"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/miracast"
            android:textColor="@color/color_enable_38_a6"
            android:textSize="@dimen/wb_hdmi_text_size"
            app:layout_constraintBottom_toTopOf="@id/tv_hdmi2"
            app:layout_constraintEnd_toStartOf="@id/hdmi1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/miracast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.55"
            android:scaleY="0.55"
            android:thumb="@drawable/switch_thumb_normal"
            app:track="@drawable/switch_track_normal" />

        <TextView
            android:id="@+id/tv_miracast_lost"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="未启用"
            android:textColor="#A6A6A6"
            android:textSize="@dimen/wb_hdmi_text_size"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_v_help" />
    </LinearLayout>

</LinearLayout>