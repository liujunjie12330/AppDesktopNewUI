<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@drawable/module_common_colorwhite_corner5">

    <View
        android:id="@+id/type_background"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_material_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back2"
        android:scaleType="fitCenter"
        android:padding="7dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/type_background"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/type_menu"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:minWidth="170dp"
        android:longClickable="false"
        app:tabBackground="@color/transparency"
        app:tabRippleColor="@color/transparency"
        android:tooltipText="@null"
        app:tabIndicator="@drawable/material_indicator"
        app:tabIndicatorColor="#E5E5E5"
        app:tabIndicatorHeight="22dp"
        app:tabIndicatorAnimationDuration="@integer/material_motion_duration_long_1"
        app:tabIndicatorGravity="center"
        app:tabTextColor="#383838"
        app:tabIndicatorAnimationMode="linear"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/MaterialTabTextStyle1"
        android:background="@drawable/bg_tab_layout"
        app:layout_constraintTop_toTopOf="@id/type_background"
        app:layout_constraintBottom_toBottomOf="@id/type_background"
        app:layout_constraintStart_toStartOf="@id/type_background"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/template"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scene"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paster"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/border"/>
        
    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/direction_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="direction,direction_icon"/>
    
    <Spinner
        android:id="@+id/direction"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:background="@null"
        android:layout_marginEnd="10dp"
        android:gravity="start"
        android:popupBackground="@drawable/text_box_bg_80"
        app:layout_constraintEnd_toEndOf="@id/type_background"
        app:layout_constraintTop_toTopOf="@id/type_background"
        app:layout_constraintBottom_toBottomOf="@id/type_background" />

    <ImageView
        android:id="@+id/direction_icon"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/arrow_down"
        android:rotation="90"
        android:layout_marginEnd="7dp"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="@id/direction"
        app:layout_constraintEnd_toEndOf="@id/direction"
        app:layout_constraintBottom_toBottomOf="@id/direction"
        tools:ignore="ContentDescription" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/style_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:longClickable="false"
        app:tabBackground="@color/transparency"
        app:tabRippleColor="@color/transparency"
        android:tooltipText="@null"
        app:tabIndicator="@drawable/bg_tab_indicator"
        app:tabIndicatorColor="#FF2A82E4"
        app:tabIndicatorHeight="22dp"
        app:tabMaxWidth="150dp"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorAnimationDuration="0"
        app:tabIndicatorGravity="center"
        app:tabTextColor="@color/black"
        app:tabIndicatorAnimationMode="linear"
        app:tabSelectedTextColor="@color/white"
        android:layout_marginHorizontal="10dp"
        app:tabTextAppearance="@style/MaterialTabTextStyle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_background">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例十来"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="示例"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/style_menu"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_material_vertical"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"/>

            <ImageView
                android:id="@+id/empty_tips"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/icon_empty_list"
                android:scaleType="center"
                android:paddingBottom="50dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/empty_text_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有素材"
                android:textSize="15sp"
                android:layout_marginTop="120dp"
                android:textColor="@color/light_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="empty_text_tips,empty_tips"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>