<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/background_whiteboard_config_selector">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_push"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="推流助手"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <ImageView
            android:id="@+id/button_tips"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_tips"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/source_pushing_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/source_of_pushing_address"
            android:textColor="@color/gray"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/container"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Spinner
            android:id="@+id/source_address_spinner"
            android:layout_width="@dimen/spinner_item_width_with_icon"
            android:layout_height="@dimen/spinner_item_height"
            android:layout_marginEnd="40dp"
            android:background="@drawable/record_config_spinner_bg"
            android:popupBackground="@drawable/button_border_solid_white"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@id/source_pushing_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/source_pushing_address" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/source_pushing_address"
            app:layout_constraintTop_toBottomOf="@+id/source_pushing_address">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/groupChooseAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择推流地址:"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <Spinner
                    android:id="@+id/address_spinner"
                    android:layout_width="@dimen/spinner_item_width_with_icon"
                    android:layout_height="@dimen/spinner_item_height"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/record_config_spinner_bg"
                    android:popupBackground="@drawable/button_border_solid_white"
                    android:spinnerMode="dropdown"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView2" />


                <ImageView
                    android:id="@+id/button_refresh_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_push_address_refresh"
                    app:layout_constraintBottom_toBottomOf="@+id/address_spinner"
                    app:layout_constraintStart_toEndOf="@+id/address_spinner"
                    app:layout_constraintTop_toTopOf="@+id/address_spinner"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/groupManualAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textview_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_in_address"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/type_address"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_input"
                    android:gravity="center_vertical"
                    android:hint="@string/type_in_address_hint"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:textSize="8sp"
                    app:layout_goneMarginEnd="30dp"
                    app:layout_constraintEnd_toStartOf="@id/qr_code"
                    app:layout_constraintStart_toStartOf="@id/textview_address"
                    app:layout_constraintTop_toBottomOf="@id/textview_address"
                    tools:ignore="Autofill,SmallSp,TextFields"
                    tools:text="********" />

                <TextView
                    android:id="@+id/textview_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/type_in_password"
                    android:textColor="@color/gray"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/type_address" />

                <EditText
                    android:id="@+id/type_password"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_input"
                    android:gravity="center_vertical"
                    android:hint="@string/type_in_password_hint"
                    android:maxLines="1"
                    android:paddingStart="2dp"
                    android:paddingEnd="0dp"
                    android:textSize="8sp"
                    app:layout_constraintEnd_toEndOf="@id/type_address"
                    app:layout_constraintStart_toStartOf="@id/textview_password"
                    app:layout_constraintTop_toBottomOf="@id/textview_password"
                    tools:ignore="Autofill,SmallSp,TextFields" />

                <ImageView
                    android:id="@+id/qr_code"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dp"
                    android:src="@color/black"
                    android:visibility="visible"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/type_password"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/type_address" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清晰度:"
            android:textColor="@color/gray"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/container"
            app:layout_constraintTop_toBottomOf="@+id/container" />

        <Spinner
            android:id="@+id/resolution_spinner"
            android:layout_width="@dimen/spinner_item_width_with_icon"
            android:layout_height="@dimen/spinner_item_height"
            android:layout_marginEnd="40dp"
            android:background="@drawable/record_config_spinner_bg"
            android:popupBackground="@drawable/button_border_solid_white"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_whiteboard_config_cancel"
                android:text="保存并关闭"
                android:textColor="@color/white"
                android:textSize="@dimen/whiteboard_config_text_size" />

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_whiteboard_config_confirm"
                android:text="@string/start_streaming"
                android:textColor="@color/white"
                android:textSize="@dimen/whiteboard_config_text_size" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/tips_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="34dp"
            android:translationX="-9dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:src="@drawable/push_tips_bubble" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/wb_push_instruction"
                android:textColor="@color/gray"
                android:textSize="7sp"
                tools:ignore="SmallSp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>