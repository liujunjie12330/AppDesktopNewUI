<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_white_drawable"
    android:elevation="@dimen/whiteboard_pop_elevation"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/view_span">

    <ImageView
        android:id="@+id/play_script_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/applet_qr_code" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/play_script_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray"
        android:padding="1dp"
        app:spanCount="1"
        tools:itemCount="3" />
</FrameLayout>
