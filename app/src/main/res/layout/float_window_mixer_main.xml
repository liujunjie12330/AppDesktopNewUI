<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_white_drawable"
    android:elevation="2dp">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/layoutBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        app:layoutDescription="@xml/float_window_mixer_main_scene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMicMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/mixer_mic"
                android:textColor="@color/mixer_theme"
                android:textSize="@dimen/live_setting_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/mixer_bg_tv"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/tvMicMode"
                app:layout_constraintStart_toEndOf="@id/tvMicMode"
                app:layout_constraintTop_toTopOf="@id/tvMicMode">

                <TextView
                    android:id="@+id/tvMicOriginal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mixer_bg_tv"
                    android:padding="5dp"
                    android:text="@string/mixer_mic_original"
                    android:textAlignment="center"
                    android:textColor="@drawable/mixer_color_tv"
                    android:textSize="@dimen/live_setting_default_text" />

                <TextView
                    android:id="@+id/tvMicPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mixer_bg_tv"
                    android:padding="5dp"
                    android:text="@string/mixer_mic_popular"
                    android:textAlignment="center"
                    android:textColor="@drawable/mixer_color_tv"
                    android:textSize="@dimen/live_setting_default_text" />

                <TextView
                    android:id="@+id/tvMicMajor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mixer_bg_tv"
                    android:padding="5dp"
                    android:text="@string/mixer_mic_major"
                    android:textAlignment="center"
                    android:textColor="@drawable/mixer_color_tv"
                    android:textSize="@dimen/live_setting_default_text" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:maxHeight="20dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:thumb="@drawable/switch_thumb_normal"
                app:track="@drawable/switch_track_normal"
                app:layout_constraintBottom_toBottomOf="@id/layoutMic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutMic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTitle">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMixerBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvMixerBar">


            <TextView
                android:id="@+id/tvMixerSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mixer_setting_sound"
                android:textColor="@color/mixer_theme"
                android:textSize="@dimen/live_setting_default_text"
                app:layout_constraintBottom_toBottomOf="@id/rvMixerSound"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/rvMixerSound" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMixerSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:overScrollMode="never"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvMixerSound"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMixerFun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/mixer_setting_fun"
                android:textColor="@color/mixer_theme"
                android:textSize="@dimen/live_setting_default_text"
                app:layout_constraintBottom_toBottomOf="@id/rvMixerFun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/rvMixerFun" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMixerFun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvMixerFun"
                app:layout_constraintTop_toBottomOf="@id/rvMixerSound" />

            <TextView
                android:id="@+id/tvMixerPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mixer_setting_play"
                android:textColor="@color/mixer_theme"
                android:textSize="@dimen/live_setting_default_text"
                app:layout_constraintBottom_toBottomOf="@id/rvMixerPlay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/rvMixerPlay" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMixerPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingStart="10dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvMixerFun"
                app:layout_constraintTop_toBottomOf="@id/rvMixerFun" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutEqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCustom">

            <ImageView
                android:id="@+id/ivEquilibrium"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_equilibrium_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEquilibrium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/mixer_mic_equilibrium"
                android:textColor="@color/mixer_theme"
                android:textSize="@dimen/live_setting_default_text"
                app:layout_constraintBottom_toBottomOf="@id/ivEquilibrium"
                app:layout_constraintStart_toEndOf="@id/ivEquilibrium"
                app:layout_constraintTop_toTopOf="@id/ivEquilibrium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMixerEquilibrium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivEquilibrium" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>