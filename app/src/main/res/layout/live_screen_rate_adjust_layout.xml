<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_white_drawable"
    android:elevation="@dimen/whiteboard_pop_elevation"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_screen_rate_adjustments"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <cn.synway.module_common.component.BubbleSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:bsb_auto_adjust_section_mark="true"
        app:bsb_hide_bubble="true"
        app:bsb_max="3"
        app:bsb_min="0"
        app:bsb_section_count="3"
        app:bsb_second_track_color="@color/deep_blue"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_section_text_size="7sp"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_thumb_color="@color/deep_blue"
        app:bsb_thumb_radius="5dp"
        app:bsb_touch_to_seek="true"
        app:bsb_track_color="@color/lightgray"
        app:bsb_track_size="1dp" />
</LinearLayout>