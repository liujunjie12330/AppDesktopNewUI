<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_list_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp"
    android:paddingVertical="2dp"
    android:background="@drawable/list_pop_item_bg">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:tint="@color/button_color_38"
        android:src="@drawable/ic_button_clear_track"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_list_popup"
        app:layout_constraintBottom_toBottomOf="@id/item_list_popup"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/item_list_popup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/button_color"
        android:textSize="10sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingVertical="2dp"
        tools:text="111111"
        android:layout_marginHorizontal="@dimen/dp_3"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>