<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingStart="@dimen/view_span"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/view_span">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_span"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/jumpOne"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:contentDescription="@string/third_app"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/previewOne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:background="@color/state_select_color_gray_blue"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/close_third_app_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/closeOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/closeOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_span"
            android:background="@drawable/close_third_app_back"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="@dimen/close_third_app_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jumpOne" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_span"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/jumpTwo"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:contentDescription="@string/third_app"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/previewTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:background="@color/state_select_color_gray_blue"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/close_third_app_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/closeTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/closeTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_span"
            android:background="@drawable/close_third_app_back"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="@dimen/close_third_app_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jumpTwo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/preview"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/close_third_app_back"
        android:ems="1"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/preview"
        android:textColor="@color/white"
        android:textSize="@dimen/close_third_app_text_size" />

    <LinearLayout
        android:id="@+id/app_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/view_span"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/jump_browser"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:contentDescription="@string/third_app"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/close_browser"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_span"
            android:background="@drawable/close_third_app_back"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="@dimen/close_third_app_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/make_browser_windowed"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:background="@drawable/close_third_app_back"
        android:ems="1"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/window"
        android:textColor="@color/white"
        android:textSize="@dimen/close_third_app_text_size" />

</LinearLayout>