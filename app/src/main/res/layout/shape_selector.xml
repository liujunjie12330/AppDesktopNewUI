<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_white_drawable"
    android:elevation="@dimen/whiteboard_pop_elevation"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="7dp"
    android:paddingTop="7dp"
    android:paddingEnd="7dp"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/isSolidOption"
        layout="@layout/option_layout"
        android:layout_width="@dimen/whiteboard_pop_content_width"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/shape_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_span"
        android:max="50"
        android:maxHeight="5dp"
        android:min="3"
        android:progress="10"
        android:progressDrawable="@drawable/wb_seekbar_bg"
        android:splitTrack="false"
        android:thumb="@drawable/wb_seekbar_thumb" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/light_grey" />

    <include
        android:id="@+id/shape_row_one"
        android:layout_width="@dimen/whiteboard_pop_content_width"
        android:layout_height="wrap_content"
        layout="@layout/shape_one_row" />

    <View
        android:layout_width="140dp"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/dot_line" />

    <include
        android:id="@+id/shape_row_two"
        layout="@layout/shape_one_row" />

    <include
        android:id="@+id/shape_row_three"
        layout="@layout/shape_one_row" />

    <include
        android:id="@+id/shape_row_four"
        layout="@layout/shape_one_row" />
</LinearLayout>

