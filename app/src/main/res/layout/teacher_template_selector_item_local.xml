<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="50dp"
    android:layout_height="65dp"
    android:background="@drawable/teacher_template_item_bg_selector">


    <ImageView
        android:id="@+id/template_icon"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/template_icon_name"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/white_black_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ContentDescription,UseAppTint"
        tools:src="@drawable/ic_v_document" />


    <TextView
        android:id="@+id/template_icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/template_text_color_selector"
        android:textSize="9sp"
        android:gravity="center"
        android:textAlignment="center"
        android:singleLine="true"
        android:ellipsize="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/template_icon"
        tools:ignore="SmallSp"
        tools:text="文档" />

</androidx.constraintlayout.widget.ConstraintLayout>