<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383838">

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="@dimen/wb_template_back_height"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_left_50"
        app:layout_constraintEnd_toEndOf="@id/side_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        android:padding="10dp"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ddd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <LinearLayout
        android:id="@+id/side_category"
        android:layout_width="@dimen/wb_template_side_category_width"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_line">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/side_category"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_option"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/divider_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorAnimationDuration="@integer/material_motion_duration_short_2"
        app:tabIndicatorAnimationMode="linear"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="2dp"
        app:tabMinWidth="@dimen/wb_template_tab_min_width"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wb_template_logo" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/background_image" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_video_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_source" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_text_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wb_template_text_introduce" />

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>