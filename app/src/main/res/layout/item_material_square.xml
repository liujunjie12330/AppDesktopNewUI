<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="72dp"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/material"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/grid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/mask"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#66383838"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintEnd_toEndOf="@id/material"
                app:layout_constraintStart_toStartOf="@id/material"
                app:layout_constraintTop_toTopOf="@id/material" />

            <ImageView
                android:id="@+id/complete_flag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_white_corner_3"
                android:scaleType="center"
                android:src="@drawable/icon_complete"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="@id/material"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_white_corner_3"
                android:scaleType="center"
                android:src="@drawable/icon_download"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="@id/material"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/re_download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/color_white_corner_3"
                android:scaleType="center"
                android:src="@drawable/icon_re_load"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="@id/material"
                tools:ignore="ContentDescription" />

            <SeekBar
                android:id="@+id/progress"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="8dp"
                android:max="100"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="50"
                android:progressDrawable="@drawable/progress_drawable_corner"
                android:thumb="@null"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintEnd_toEndOf="@id/material"
                app:layout_constraintStart_toStartOf="@id/material" />


            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@id/progress"
                app:layout_constraintEnd_toEndOf="@id/material"
                app:layout_constraintStart_toStartOf="@id/material"
                tools:ignore="SmallSp"
                tools:text="25%" />

            <ImageView
                android:id="@+id/iv_download_fail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="center"
                android:src="@drawable/icon_download_fail"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintEnd_toEndOf="@id/material"
                app:layout_constraintStart_toStartOf="@id/material"
                app:layout_constraintTop_toTopOf="@id/material"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_download_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/re_download_tips"
                android:textColor="#FFE5E5E5"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/material"
                app:layout_constraintEnd_toEndOf="@id/material"
                app:layout_constraintStart_toStartOf="@id/material"
                app:layout_constraintTop_toTopOf="@id/material"
                tools:ignore="SmallSp" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_download_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="iv_download_fail,tv_download_fail" />

            <View
                android:id="@+id/select_mask"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/template_bg_item_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/key"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/template_keyword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/template_save_bg"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:text="@string/template_preview"
                    android:textColor="@color/template_black_38"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/template_save_bg"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:text="@string/template_apply"
                    android:textColor="@color/template_blue"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/template_save_bg"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:text="@string/template_delete"
                    android:textColor="@color/template_red"
                    android:textSize="8sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>