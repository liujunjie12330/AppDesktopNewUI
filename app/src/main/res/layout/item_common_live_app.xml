<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:background="@color/transparent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/app"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_min="22dp"
            app:layout_constraintWidth_min="22dp"
            android:src="@mipmap/icon_douyin"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/app_name"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_gray_solid_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7.5sp"
            android:textColor="#FF808080"
            app:layout_constraintStart_toStartOf="@id/app"
            app:layout_constraintEnd_toEndOf="@id/app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app"
            tools:text="淘宝直播\n淘宝直播"
            tools:visibility="gone"
            tools:ignore="SmallSp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>