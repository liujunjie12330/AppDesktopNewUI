<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item_material_image_box_bg"
    android:padding="1dp">

    <TextView
        android:id="@+id/image_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="test"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_type_text" />

    <ImageView
        android:id="@+id/file_setting_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@mipmap/ic_img_setting"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/main_image"
        app:layout_constraintTop_toTopOf="@id/main_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_a40"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/main_image"
        app:layout_constraintEnd_toEndOf="@id/main_image"
        app:layout_constraintStart_toStartOf="@id/main_image"
        app:layout_constraintTop_toTopOf="@id/main_image">

        <ImageView
            android:id="@+id/close_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_file_setting_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/make_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_top"
            android:textColor="@color/white"
            android:textSize="@dimen/live_setting_default_text"
            app:layout_constraintBottom_toTopOf="@id/make_rotate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/make_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_rotate"
            android:textColor="@color/white"
            android:textSize="@dimen/live_setting_default_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/make_top" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/download_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_a40"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/main_image"
        app:layout_constraintEnd_toEndOf="@id/main_image"
        app:layout_constraintStart_toStartOf="@id/main_image"
        app:layout_constraintTop_toTopOf="@id/main_image">

        <ImageView
            android:id="@+id/wait_download"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_file_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/downloading"
            style="@style/process_bar_loading_style"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delete_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_a40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_material_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mask_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_a40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>