<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/ui_color_white_corner_5"
        android:elevation="5dp">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/home_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="
            title,divider,category,
            divider2,tips,manage_files,fast_transport" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/unmount_tips_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="unmount_tips,iv_unmount_tips" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_chosen"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="43dp"
            android:background="@color/guide_black_e5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@id/divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:itemCount="4" />

        <ImageView
            android:id="@+id/iv_unmount_tips"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="5dp"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_tips_deep_blue"
            app:layout_constraintBottom_toBottomOf="@id/unmount_tips"
            app:layout_constraintEnd_toStartOf="@id/unmount_tips"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/unmount_tips"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/unmount_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unmount_tips"
            android:textColor="#FF808080"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_unmount_tips"
            app:layout_constraintTop_toBottomOf="@id/category"
            tools:ignore="SmallSp" />


        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="85dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/material_tips_title"
            android:textColor="#FFA2A6A6"
            android:textSize="9sp"
            app:layout_constraintBottom_toTopOf="@id/display_mode_text"
            app:layout_constraintStart_toStartOf="@id/category"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/display_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_mode"
            android:textColor="@color/blue2A82E4"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tips" />

        <FrameLayout
            android:id="@+id/region_non_net_disk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/manage_files"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="@string/manage_files"
            android:textColor="@color/deep_blue"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fast_transport"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="@string/fast_transport"
            android:textColor="@color/deep_blue"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>