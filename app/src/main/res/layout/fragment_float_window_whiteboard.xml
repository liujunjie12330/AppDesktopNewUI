<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1080px"
    android:layout_height="1812px"
    android:background="@color/whiteboard_background_half_transparent">

    <FrameLayout
        android:id="@+id/whiteboard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteboard_background_half_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/whiteboard_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:text="清除"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/whiteboard_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="撤销"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_clear" />

    <Button
        android:id="@+id/whiteboard_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="箭头"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_undo" />

    <Button
        android:id="@+id/whiteboard_eraser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="橡皮擦"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteboard_container"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_arrow" />

    <Button
        android:id="@+id/whiteboard_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/whiteboard_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="销毁"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/whiteboard_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线1"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_eraser" />

    <Button
        android:id="@+id/whiteboard_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="颜色"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_clear"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/whiteboard_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线2"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_undo"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_color" />

    <Button
        android:id="@+id/whiteboard_straight_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直线"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_arrow"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_line2" />

    <Button
        android:id="@+id/whiteboard_triangle_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正三角"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_eraser"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_straight_line" />

    <Button
        android:id="@+id/whiteboard_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正方型"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_line"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_triangle_regular" />

    <Button
        android:id="@+id/whiteboard_hexagon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="六边型"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_color"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/whiteboard_shape_solid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实心"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_straight_line"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_triangle_normal" />

    <Button
        android:id="@+id/whiteboard_triangle_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三角"
        android:textSize="@dimen/whiteboard_btn_text_size"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteboard_line2"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_hexagon" />


    <SeekBar
        android:id="@+id/whiteboard_pen_size"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:max="50"
        app:layout_constraintBottom_toBottomOf="@+id/whiteboard_dismiss"

        app:layout_constraintEnd_toStartOf="@+id/whiteboard_text_pen_size"
        app:layout_constraintStart_toEndOf="@+id/whiteboard_dismiss"
        app:layout_constraintTop_toTopOf="@+id/whiteboard_dismiss" />

    <TextView
        android:id="@+id/whiteboard_text_pen_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/whiteboard_pen_size_show_text"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/whiteboard_pen_size"
        app:layout_constraintEnd_toStartOf="@+id/whiteboard_hide"
        app:layout_constraintTop_toTopOf="@+id/whiteboard_pen_size" />
</androidx.constraintlayout.widget.ConstraintLayout>