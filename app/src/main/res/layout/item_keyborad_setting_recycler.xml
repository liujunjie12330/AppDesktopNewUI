<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/operation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="测试文本"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/operation_key"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_keyboard_setting_background"
        android:text="1"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/auto_keyboard_setting_text_sizes"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/operation_text"
        app:layout_constraintBottom_toBottomOf="@id/operation_text"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>