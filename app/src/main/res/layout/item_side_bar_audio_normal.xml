<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="80dp"
        android:text="标题"
        android:textColor="@drawable/seekbar_title_color_normal"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/enable_switch_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enable_switch_layout" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enable_switch_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/enable_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:maxHeight="20dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:thumb="@drawable/switch_thumb_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/switch_track_normal" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/enable_switch_layout">

        <ImageView
            android:id="@+id/reduceVolume"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="5dp"
            android:src="@drawable/ic_volume_reduce" />

        <SeekBar
            android:id="@+id/audio_volume_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="2dp"
            android:min="1"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:progress="5"
            android:progressDrawable="@drawable/wb_seekbar_progress_drawable_selector"
            android:splitTrack="false"
            android:thumb="@drawable/wb_seekbar_thumb_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/audio_name" />

        <ImageView
            android:id="@+id/addVolume"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="5dp"
            android:src="@drawable/ic_volume_add" />

        <TextView
            android:id="@+id/audio_volume_value"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="0"
            android:textColor="@drawable/seekbar_volum_value_color"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/audio_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/audio_name" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>