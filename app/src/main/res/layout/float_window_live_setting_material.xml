<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_setting_title_height"
        android:background="@color/live_setting_main_color"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/background_image_text"
            style="@style/live_setting_material_normal"
            android:text="@string/background_material_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/watermark_image_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/watermark_image_text"
            style="@style/live_setting_material_normal"
            android:text="@string/watermark_image_space"
            app:layout_constraintBottom_toBottomOf="@id/background_image_text"
            app:layout_constraintEnd_toStartOf="@+id/template_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/background_image_text"
            app:layout_constraintTop_toTopOf="@id/background_image_text" />

        <TextView
            android:id="@+id/template_text"
            style="@style/live_setting_material_normal2"
            android:text="@string/template"
            app:layout_constraintBottom_toBottomOf="@+id/background_image_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/watermark_image_text"
            app:layout_constraintTop_toTopOf="@+id/background_image_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bg"
        layout="@layout/float_window_live_setting_material_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_layout" />

    <include
        android:id="@+id/wm"
        layout="@layout/float_window_live_setting_material_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_layout" />

    <include
        android:id="@+id/template"
        layout="@layout/float_window_live_setting_material_template"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_layout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/save_template_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/live_setting_main_color"
        android:padding="5dp"
        android:text="@string/save_template"
        android:textColor="@color/white"
        android:textSize="@dimen/live_setting_default_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save_as_other_template_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/save_as_other_template_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/live_setting_main_color"
        android:padding="5dp"
        android:text="@string/save_as_other_template"
        android:textColor="@color/white"
        android:textSize="@dimen/live_setting_default_text"
        app:layout_constraintBottom_toBottomOf="@id/save_template_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/save_template_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>