<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/background_button_list"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_pen"
                android:layout_width="@dimen/color_icon_size"
                android:layout_height="@dimen/color_icon_size"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:background="@drawable/button_background"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pen_n" />

            <ImageView
                android:id="@+id/icon_bg"
                android:layout_width="@dimen/color_icon_size"
                android:layout_height="@dimen/color_icon_size"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:background="@drawable/button_background"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_background_color" />
        </LinearLayout>


        <cn.synway.module_sdirector_ui.whiteboard.ui.custom.ColorPickerView
            android:id="@+id/color_picker_view"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_margin="5dp" />

        <include
            android:id="@+id/cor_1"
            layout="@layout/color_one_row" />

        <include
            android:id="@+id/cor_2"
            layout="@layout/color_one_row" />
    </LinearLayout>
</LinearLayout>
