<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/undoButton"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:background="@drawable/button_background"
        android:padding="@dimen/side_bar_padding_1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_button_backward"
        app:tint="@color/button_color_38"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/redoButton"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginTop="@dimen/side_bar_margin"
        android:background="@drawable/button_background"
        android:padding="@dimen/side_bar_padding_1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_button_forward"
        app:tint="@color/button_color_38"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="20dp"
        android:layout_height="0.5dp"
        android:background="@color/E5E5E5"
        android:layout_marginVertical="4dp"
         />

    <ImageButton
        android:id="@+id/clearButton"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:background="@drawable/button_background"
        android:padding="@dimen/side_bar_padding_1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_clear_track"
        app:tint="@color/button_color_38"
        tools:ignore="ContentDescription" />

</LinearLayout>