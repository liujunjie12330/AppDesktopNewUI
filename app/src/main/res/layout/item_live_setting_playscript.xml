<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginEnd="50dp"
    >
    <TextView
        android:id="@+id/play_script_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/live_setting_default_text"
        android:textColor="@color/white"
        android:text="test title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/live_setting_default_text"
        android:textColor="@color/white_a40"
        android:text="2020"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/play_script_type"
        app:layout_constraintStart_toStartOf="@id/play_script_type"/>

    <ImageView
        android:id="@+id/select_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/live_setting_play_script_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/play_script_type"
        app:layout_constraintBottom_toBottomOf="@id/create_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>