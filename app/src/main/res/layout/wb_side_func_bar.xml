<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/side_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pack_up_side"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pack_up_side"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/color_white_corner_3"
        android:elevation="@dimen/wb_control_bar_elevation"
        android:padding="@dimen/view_span"
        android:src="@drawable/pick_up_left_side_bar"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/main_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/paint_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/color_white_corner_3"
        android:elevation="@dimen/wb_control_bar_elevation"
        android:padding="@dimen/side_bar_padding_3"
        app:layout_constraintEnd_toEndOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/main_layout"
        app:layout_constraintTop_toBottomOf="@id/pack_up_side">

        <ImageView
            android:id="@+id/paint_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/color_white_corner_3"
        android:elevation="@dimen/wb_control_bar_elevation"
        android:gravity="center"
        android:padding="@dimen/side_bar_padding_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paint_button_layout"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/paint_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="divider,return_normal,paint_view_place_holder" />

        <View
            android:id="@+id/paint_view_place_holder"
            android:layout_width="0dp"
            android:layout_height="@dimen/paint_view_height"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            style="@style/divider"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/return_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/return_normal"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@drawable/button_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_paint_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="返回"
                android:textColor="@color/button_color_38"
                android:textSize="@dimen/controller_button_text_size" />
        </FrameLayout>

        <cn.synway.module_sdirector_ui.whiteboard.ui.custom.WBScrollView
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/buttons_list"
                layout="@layout/controller_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </cn.synway.module_sdirector_ui.whiteboard.ui.custom.WBScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <cn.synway.module_sdirector_ui.whiteboard.ui.custom.paint.PaintView
        android:id="@+id/paint_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="@dimen/wb_control_bar_elevation"
        android:visibility="gone"
        app:animDuration="300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_layout"
        app:movable_origin_ratio="0.95"
        app:movable_ratio="0.5"
        app:move_orientation="left_to_right"
        app:single_height="@dimen/paint_view_short_side"
        app:single_width="@dimen/paint_view_long_side"
        app:view_count="2" />

    <FrameLayout
        android:id="@+id/undo_redo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/color_white_corner_3"
        android:elevation="@dimen/wb_control_bar_elevation"
        android:padding="@dimen/side_bar_padding_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_layout">

        <include
            android:id="@+id/undo_redo_list"
            layout="@layout/whiteboard_undo_redo_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>