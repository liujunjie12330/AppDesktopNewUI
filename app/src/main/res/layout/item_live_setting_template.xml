<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="1dp">

    <ImageView
        android:id="@+id/template_image"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/item_material_image_box_bg"
        android:padding="2dp"
        android:src="@mipmap/template_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/template_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="测试标题"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/live_setting_small_text"
        app:layout_constraintEnd_toEndOf="@id/template_image"
        app:layout_constraintStart_toStartOf="@id/template_image"
        app:layout_constraintTop_toBottomOf="@id/template_image" />

    <TextView
        android:id="@+id/tips_info"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="@string/auto_save"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/live_setting_small_text"
        app:layout_constraintEnd_toStartOf="@id/edit_icon"
        app:layout_constraintStart_toStartOf="@id/template_title"
        app:layout_constraintTop_toBottomOf="@id/template_title" />


    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="@id/template_image"
        app:layout_constraintStart_toEndOf="@id/tips_info"
        app:layout_constraintTop_toBottomOf="@id/template_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delete_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_a40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_material_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mask_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_a40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>