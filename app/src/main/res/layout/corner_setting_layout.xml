<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="30dp"
    android:background="@drawable/color_white_corner_3"
    android:clipToPadding="false"
    android:elevation="3dp"
    android:padding="4dp">

    <TextView
        android:id="@+id/corner_attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="圆角大小"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/corner_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/corner_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="@null"
        android:max="200"
        android:min="0"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:progress="0"
        android:progressDrawable="@drawable/seekbar_progress_drawable_grey_blue"
        android:splitTrack="false"
        android:thumb="@drawable/seekbar_thumb_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/corner_value"
        app:layout_constraintStart_toEndOf="@id/corner_attr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/corner_value"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="200"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/corner_seekbar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>