<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/box_height"
        android:layout_margin="@dimen/box_padding_margin"
        android:background="@drawable/ui_color_white_corner_5"
        android:elevation="@dimen/box_elevation"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/box_padding_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<!--文档-->
        <cn.synway.module_sdirector_ui.whiteboard.ui.custom.ConstraintLayoutDisable
            android:id="@+id/openDocuments"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginVertical="@dimen/button_margin_top_bottom"
            android:background="@drawable/button_background">

            <ImageView
                android:id="@+id/openDocumentsImage"
                android:layout_width="@dimen/controller_button_size"
                android:layout_height="@dimen/controller_button_size"
                android:layout_gravity="center"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_document_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/controller_document_btn"
                android:textAlignment="center"
                android:textColor="@color/button_color_38"
                android:textSize="@dimen/controller_button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/openDocumentsImage" />
        </cn.synway.module_sdirector_ui.whiteboard.ui.custom.ConstraintLayoutDisable>

        <cn.synway.module_sdirector_ui.whiteboard.ui.custom.ConstraintLayoutDisable
            android:id="@+id/teacher_open_projection"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginVertical="@dimen/button_margin_top_bottom"
            android:background="@drawable/button_background">

            <ImageView
                android:id="@+id/open_projectionImage"
                android:layout_width="@dimen/controller_button_size"
                android:layout_height="@dimen/controller_button_size"
                android:layout_gravity="center"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/controller_video_background_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/controller_video_background_btn"
                android:textAlignment="center"
                android:textColor="@color/button_color_38"
                android:textSize="@dimen/controller_button_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/open_projectionImage" />
        </cn.synway.module_sdirector_ui.whiteboard.ui.custom.ConstraintLayoutDisable>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>